{% extends 'base.html.twig' %}
{% block content %}
	
	<div class="box-body">
        <div class="media-body">
                <div class="clearfix">
                    <p class="pull-left">
                        <a href="{{ path('create_course_form') }}" class="btn btn-success btn-sm">
                            Cadastrar curso
                        </a>
                    </p>
            </div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box">
            <div class="box-header">
              <h3 class="box-title">Cursos cadastrados</h3>

            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
              <table class="table">
                <tbody><tr>
                  <th>#</th>
                  <th>Nome</th>
                  <th>Editar</th>
                  <th>Deletar</th>
                </tr>

                {% for course in courses %}
                <tr>
                  	<td>{{ course.id }}</td>
                  	<td>{{ course.name }}</td>
                  	<td><a href="{{ path('edit_course_form', {'id': course.id}) }}">Editar</a></td>
					<td><a href="{{ path('delete_course', {'id': course.id}) }}">Apagar</a></td>
                </tr>
                {% endfor %}
              </tbody></table>
            </div>
            <!-- /.box-body -->
          </div>
                
    </div>

{% endblock %}


