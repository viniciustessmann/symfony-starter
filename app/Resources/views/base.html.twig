                    <a href="{{ path('possible_admin_default_index') }}">
                        <i class="fa fa-dashboard"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                {% endif %}
                <li class="{% if app.request.attributes.get('_route') starts with 'possible_admin_entry_' and app.request.attributes.get('_route') != 'possible_admin_entry_archive' %}active{% endif %}">
                    <a href="{{ path('possible_admin_entry_index') }}">
                        <i class="fa fa-pencil-square-o"></i>
