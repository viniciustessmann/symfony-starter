                    <li class="{% if app.request.attributes.get('_route') starts with 'possible_admin_image_gallery_' %}active{% endif %}">
                        <a href="{{ path('possible_admin_image_gallery_index') }}">
                            <i class="fa fa-picture-o"></i>
                            <span>Image Gallery</span>
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <li class="{% if app.request.attributes.get('_route') starts with 'possible_admin_comment_' %}active{% endif %}">
                        <a href="{{ path('possible_admin_comment_index') }}">
                            <i class="fa fa-commenting"></i>
                            <span>Comments</span>
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_LEARNINGTAG_OWNER') %}
                    <li class="{% if app.request.attributes.get('_route') == 'possible_admin_entry_archive' %}active{% endif %}">
                        <a href="{{ path('possible_admin_entry_archive') }}">
                            <i class="fa fa-archive"></i>
                            <span>Archive</span>
                        </a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <li class="{% if app.request.attributes.get('_route') == 'possible_admin_settings_edit' %}active{% endif %}">
