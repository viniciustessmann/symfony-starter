{% extends 'base.html.twig' %}
{% block content %}
	
    <section class="content-header">
      <h1>
        Detalhes do treinamento 
      </h1>
    </section>

    <section class="content">
        <div class="box box-primary">
            <div class="box">
                <div class="box-body row">
                    <div class="col-sm-12">

                        <div class="box-body">
                            <div class="form-group">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                    <h3 class="box-title">Sobre</h3>
                                    </div>
                                    <!-- /.box-header -->
                                    <div class="box-body">
                                    <strong><i class="fa fa-book margin-r-5"></i> {{name}}</strong>

                                    <p class="text-muted">
                                        {{description}}
                                    </p>
                                    <hr>

                                    <strong><i class="fa fa-mortar-board margin-r-5"></i> Curso</strong>
                                    <p class="text-muted">{{ course }}</p>
                                    <a target="_blank" href="{{ path('detail_course', {id: courseId}) }}">Ver curso</a>
                                    <hr>

                                    <strong><i class="fa fa-map-marker margin-r-5"></i> Localização</strong>
                                    <p class="text-muted">Malibu, California</p>
                                    <hr>

                                    <strong><i class="fa fa-calendar margin-r-5"></i> Data do curso</strong>
                                    <p class="text-muted">{{date}}</p>
                                   
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-sm-12">
                        <div class="media-body">
                            <table role="grid" class="table table-bordered table-striped dataTable" id="dtable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nome</th>
                                        <th>E-mail</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.id }}</td>
                                            <td>{{ user.name }}</td>
                                            <td>{{ user.email }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>


                    <div class="col-sm-12">
                        <div class="media-body">
                                <div class="clearfix">
                                    <p class="pull-left">
                                        <a href="{{ path('insert_user_training', {id: id}) }}" class="btn btn-success btn-sm">
                                            Inscrever no trainamento
                                        </a>
                                    </p>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>    
    </section>

{% endblock %}


