 {% extends 'base.html.twig' %}
{% block content %}
	
    <section class="content-header">
      <h1>
        Cursos cadastrados
        {# <small>preview of simple tables</small> #}
      </h1>
      {# <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
