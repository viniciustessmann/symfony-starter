        <li class="active">Simple</li>
      </ol> #}
    </section>

    <section class="content">
        <div class="box-body">
            <div class="media-body">
                    <div class="clearfix">
                        <p class="pull-left">
                            <a href="{{ path('create_training_form') }}" class="btn btn-success btn-sm">
                                Cadastrar treinamento
                            </a>
                        </p>
                </div>
            </div>
        </div>

        <div class="box box-primary">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Treinamentos cadastrados</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table role="grid" class="table table-bordered table-striped dataTable" id="dtable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nome</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for training in trainings %}
                                    <tr>
                                        <td>{{ training.id }}</td>
                                        <td>{{ training.name }}</td>
                                        <td>
                                            <a style="margin-right:5px" href="{{ path('detail_training', {'id': training.id}) }}" class="btn-sm btn-primary">
                                                <i class="fa fa-eye fa-lg"></i>
                                            </a>
                                            <a style="margin-right:5px" href="{{ path('edit_training_form', {'id': training.id}) }}" class="btn-sm btn-info">
                                                <i class="fa fa-edit fa-lg"></i>
                                            </a>
                                            <a style="margin-right:5px" onclick="return confirm('Você tem certeza?')" href="{{ path('delete_training', {'id': training.id}) }}" class="btn-sm btn-danger">
                                                <i class="fa fa-trash-o fa-lg"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>    
    </div>
</div>

{% endblock %}



